{{#if listeFonction}}
	<form action="#" method="POST">
		<div>
			<label for="sal_telprof">Téléphone professionnel </label>
			<input type="text" name="sal_telprof" required  {{#if session.personneModifiee}}value="{{session.personneModifiee.sal_telprof}}"{{/if}}/>
		</div>
		<div>
			<label for="fonction">Fonction </label>
			<select name="fonction">
			{{#each listeFonction}}
				<option value="{{this.fon_num}}">{{this.fon_libelle}}</option>
			{{/each}}
			</select>
		</div>
		<input type="submit" value="Valider"/>
	</form>
{{else}}
	<img src="/image/valid.png"/>
	<span>Le salarié a été ajouté !</span>
{{/if}}
