{{#if listeFonction}}
	<form action="#" method="POST">
		<!-- Téléphone - Fonction -->
		<div class="row">
			<div class="col s12 m6 offset-m3">
				<div class="input-field">
	            	<i class="mdi-action-settings-phone prefix"></i>
					<label for="sal_telprof">Téléphone professionnel</label>
					<input type="text" name="sal_telprof" class="validate" required
						{{#if session.personneModifiee}}
							value="{{session.personneModifiee.sal_telprof}}"
						{{/if}}
					/>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col s12 m6 offset-m3">
				<div class="row valign-wrapper">
					<div class="col s12 m4 l3">
						<span>Fonction : </span>
					</div>
					<div class="col s12 m8 l9">
						<select name="fonction">
							{{#each listeFonction}}
								<option value="{{this.fon_num}}">{{this.fon_libelle}}</option>
							{{/each}}
						</select>
					</div>
				</div>
			</div>
		</div>
		<button type="submit" class="waves-effect waves-light cyan lighten-3 btn-flat">Valider</button>
	</form>

{{else}}

<div class="card blue-grey darken-1">
    <div class="card-content white-text">
        <span class="card-title">Ajout effectué</span>
        <img src='/image/valid.png'/><p>Le salarié a été ajouté.</p>
    </div>
    <div class="card-action">
        <a href="/">Retour à l'accueil</a>
        <a href="/personne/lister">Voir la liste des personnes</a>
    </div>
</div>

{{/if}}
