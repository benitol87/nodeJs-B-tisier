{{> enTete}}
{{> menu}}
 <h1>Liste des citations déposées</h1>


<p>Il y a actuellement <b>{{ nbCitation }}</b> citations validées</p>
<table>
    <tr>
        <th>Nom de l'enseignant</th>
        <th>Libellé</th>
        <th>Date</th>
        <th>Moyenne des notes</th>
        <th>Actions</th>
    </tr>
    {{#each citations}} <!--  parcours de listeCitation -->
    <tr>
        <td>{{ this.per_nom }}</td>
        <td><a href="/citation/{{ this.cit_num }}">{{ this.cit_libelle }}</a></td>
        <td>{{ this.cit_date }}</td>
        <td>{{ this.moyenne }}</td>
        <td>
            <a href="/citation/{{ this.cit_num }}/supprimer"><button>Supprimer</button></a>
        </td>
    </tr>
    {{/each}}
</table>


<p>Il y a actuellement <b>{{ nbCitation_invalides }}</b> citations à valider</p>
<table>
    <tr>
        <th>Nom de l'enseignant</th>
        <th>Libellé</th>
        <th>Date</th>
        <th>Moyenne des notes</th>
        <th>Actions</th>
    </tr>
    {{#each citations_invalides}} <!--  parcours de listeCitation -->
    <tr>
        <td>{{ this.per_nom }}</td>
        <td><a href="/citation/{{ this.cit_num }}">{{ this.cit_libelle }}</a></td>
        <td>{{ this.cit_date }}</td>
        <td>{{ this.moyenne }}</td>
        <td>
            <a href="/citation/{{ this.cit_num }}/valider"><button>Valider</button></a>
            <a href="/citation/{{ this.cit_num }}/supprimer"><button>Supprimer</button></a>
        </td>
    </tr>
    {{/each}}
</table>